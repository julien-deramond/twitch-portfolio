---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
--- 
<BaseLayout pageTitle={frontmatter.title}>
  <p><em>{frontmatter.description}</em></p>
  <p>{frontmatter.pubDate.slice(0,10)}</p>

  <p>Written by: {frontmatter.author}</p>

  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} /> 

  <div class="flex flex-wrap my-0 mx-auto">
    {frontmatter.tags.map((tag) => (
      <p class="bg-gray-100 text-sm py-2 px-4 m-1 border-solid border border-blue-500 hover:border-red-500 hover:bg-red-100 rounded-sm">
        <a href={`/tags/${tag}`} class="text-blue-600 hover:text-red-800">{tag}</a>
      </p>
    ))}
  </div>

  <slot />
</BaseLayout>